font-weight: bold;
color: #fff;
margin-top: 20px;
cursor: pointer;
line-height: 45px;
}.wrapper input{
    border-radius: 50px;
  font-size: 15px;
  height: 40px;
border: none;
padding-left: 15px;
width: calc(100% - 15px);
margin-bottom: 10px;
background: rgba(0,0,0,0.8); 
color: #fff ;}


.form a{
  text-decoration: none;
  color: #000;
  font-size: 20px;
}


body{
